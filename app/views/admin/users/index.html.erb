<body>

<header>
<div class="header_form"> 
  <h2>管理者画面</h2>
</div> 
</header>

<main>
<div class="main_form">
<h2>ユーザ一覧</h2>
<p><%= link_to '新規ユーザ作成', new_admin_user_path %></p>
<table class="table">
  <thead>
    <tr>
      <th>ユーザーID</th>
      <th>ユーザー名</th>
      <th>ユーザーAdmin</th>
      <th>タスク数</th>
    </tr>
  </thead> 
  <% @users.each do |user| %>
    <tbody>
  <tr class="task_row">
    <td><%= user.id %></td> 
    <td><%= user.name %></td>
    <td><%= user.admin %></td>
    <td><%= user.tasks.count %></td>
  <div class="btn-group btn-group-lg" role="group" aria-label="Basic example">
    <td><button type="button" class="btn btn-secondary"><%= link_to '詳細', admin_user_path(user) %></button></td>
    <td><button type="button" class="btn btn-secondary"><%= link_to '編集', edit_admin_user_path(user) %></button></td>
    <td><button type="button" class="btn btn-secondary"><%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' } %></button></td>
  </div>
</tr>
</tbody>
<% end %>
</table>
<br>
</div>
</main>
  
