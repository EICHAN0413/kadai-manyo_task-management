

<header>
  <div class="new_title">
    <h1>タスク詳細</h1>
  </div>
</header>

<div class="information_form">
  <p id="notice"><%= notice %></p>
</div>


<div class = "field">
<p>
  <strong>タイトル</strong>
  <%= @task.title %>
</p>
</div>

<div class = "field">
<p>
  <strong>内容</strong>
  <%= @task.content %>
</p>
</div>

<div class = "field">
<p>
  <strong>終了期限</strong>
  <%= @task.end_date %>
</p>
</div>

<div class = "field">
<p>
  <strong>優先順位</strong>
  <%= @task.priority %>
</p>
</div>

<div class = "field">
<p>
  <strong>ステータス</strong>
  <%= @task.status %>
</p>
</div>


<div class="action">
  <button class="btn btn-info"><%= link_to '編集', edit_task_path(@task) %></button>
  <button class="btn btn-info"><%= link_to '戻る', tasks_path %></button>
</div>

<footer>
</footer>