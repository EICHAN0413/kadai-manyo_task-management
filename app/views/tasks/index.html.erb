<%= form_with url: tasks_path, method: :get, local: true do |f| %>
  <%= f.label :タスク名 %>
  <%= f.text_field :title %>
  <%= f.label :ステータス %>
  <%= f.select :status, Task.statuses.keys, include_blank: '選択してください' %>
  <%= f.submit :search　%>
<% end %>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<%= link_to "優先順位でソートする", tasks_path(sort_priority: "true") %>
<%= link_to "一覧に戻る", tasks_path %>
 <%= link_to 'タスク追加', new_task_path %>

<p id="notice"><%= notice %></p>


<h1>タスク一覧</h1>
<table>
<th>タスク名</th>
<th>内容</th>
<th>終了期限</th>
<th>優先順位</th>
<th>ステータス</th>
<% @tasks.each do |task| %>
<tbody>
<tr class="task_row"> 
  <td><%= task.title %></td>
  <td><%= task.content %></td>
  <td><%= task.end_date %></td>
  <td><%= task.priority %></td>
  <td><%= task.status %></td>
  <td><%= link_to '詳細', task_path(task.id) %></td>
  <td><%= link_to '編集', edit_task_path(task) %></td>
  <td><%= link_to '削除', task, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
</tr>
</tbody>
<% end %>
</table>
