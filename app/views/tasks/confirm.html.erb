<body>
<header>
</header>

<main>
<div class="new_title">
  <h3>以下の内容でタスクを登録しますか？</h3>
</div>


<%= form_with(model: @task, url: tasks_path, local: true) do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :end_date %>
  <%= form.hidden_field :priority %>
  <%= form.hidden_field :status %>
  <% @task.labels.each do |label| %>
    <%= form.hidden_field :label_ids, multiple: true, value: label.id  %>
  <% end %>

  <div class = "field">
    <p>タスク名:<%= @task.title %></p>
  </div>
  <div class = "field">
    <p>内容:<%= @task.content %></p>
  </div>
  <div class = "field">
    <p>終了期限:<%= @task.end_date %></p>
  </div>
  <div class = "field">
    <p>優先順位:<%= @task.priority %></p>
  </div>
  <div class = "field">
    <p>ステータス:<%= @task.status %></p>
  </div>
  <div class = "field">
    <p>ラベル登録:<% @task.labels.each do |label| %>
      <%= label.name %>
    <% end %></p>
  </div>

  <div class="action">
  <%= form.submit  "登録する" %>
  <%= form.submit  "戻る", name: 'back' %>
  </div>
<% end %>

</body>